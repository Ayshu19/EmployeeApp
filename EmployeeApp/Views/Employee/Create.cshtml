@model EmployeeApp.Models.EmployeeModel

<head>
    <link rel="stylesheet" href="~/css/Employee.css" />
</head>

<h2>Employee Form</h2>

<!-- Submission Error -->
@if (ViewBag.Error != null)
{
    <div id="formMessage" style="color:red">@ViewBag.Error</div>
}

<!-- Submission Success -->
@if (ViewBag.Message != null)
{
    <div id="formMessage" style="color:green">@ViewBag.Message</div>
}

<form asp-action="Create" method="post">
    <div>
        <label>Name:</label><br />
        <input type="text" name="Name" value="@Model?.Name" required />
    </div>
    <br />
    <div>
        <label>Department:</label><br />
        <input type="text" name="Department" value="@Model?.Department" required />
    </div>
    <br />
    <div>
        <label>Email:</label><br />
        <input type="email" name="Email" value="@Model?.Email" required />
    </div>
    <br />
    <div>
        <label>Aadhaar Number:</label><br />
        <input type="text" name="AadhaarNumber" value="@Model?.AadhaarNumber" required />
    </div>
    <br />
    <div>
        <label>PAN Number:</label><br />
        <input type="text" name="PANNumber" value="@Model?.PANNumber" required />
    </div>
    <br />
    <div>
        <label>Date of Birth:</label><br />
        <input type="date" name="DateOfBirth" value="@Model?.DateOfBirth?.ToString("yyyy-MM-dd")" />
    </div>
    <br />
    <div>
        <label>Address:</label><br />
        <textarea name="Address">@Model?.Address</textarea>
    </div>
    <br />
    <button type="submit">Submit</button>
</form>

<!-- Download PDF Button -->
@if (ViewBag.PdfFile != null)
{
    <br />
    <a id="downloadLink" href="data:application/pdf;base64,@ViewBag.PdfFile" download="EmployeeDetails.pdf">
        Download PDF
    </a>
}

<script src="~/js/Employee.js"></script>
